<%- include('header.ejs') %>
<!-- <div class="container landing-container"> -->
<div class="container">
    <div class="roomName-container">
        <div class="spacer"></div>
        <h2>Welcome to '<%= room.Name %>'</h2>
        <div class="spacer"></div>
    </div>
    <div class="container brief-instructions-container">
        <div class="container join-container">
            <h3>Join!</h3>
            <p class="instruction">
                Join a room with all your friends for an upcoming party, trip, or other fun event!
            </p>
        </div>
        <div class="container guess-container">
            <h3>Guess!</h3>
            <p class="instruction">
                Enter a prediction for something that will happen during the event. This can be anything from a frequent gag to a true psychic vision!
            </p>
        </div>
        <div class="container check-container">
            <h3>Check!</h3>
            <p class="instruction">
                Check off events from your personal random board as they happen. Finishin any line is a win and lets you play again!
            </p>
        </div>
    </div>
    <div><h2 style="font-size: calc(6vh + 3vw)">â†“</h2></div>
    <form class="container signup-form-container" action="/rooms/<%= roomID %>/signup" method="post">
        <div class="container room-name-input-container">
            <div>
                <h3>
                    Your Name
                </h3>
            </div>
            <div class="spacer"></div>
            <input type="text" class="room-name-input" size="10" maxlength="15" name="displayName" placeholder="John" autocomplete="off" required>
        </div>
        <div class="container room-name-input-container">
            <div style="display: flex; flex-direction: row; align-items: center;">
                <h3>
                    Wuddle happen?
                </h3>
                <a href="/info"><img class="info" src="/images/info.svg" style="filter: none; padding-left: 1vw; padding-top: 4px; width: calc(1vh + 1.8vw);"></a>
            </div>
            <div class="spacer"></div>
            <div>
                <input type="text" class="room-name-input" id="event" name="event" placeholder="Somebody gets hurt" maxlength="45" autocomplete="off" required>
            </div>
            <div class="spacer"></div>
        </div>
        <div class="container">
            <button type="submit" class="room-button">Join Game!</button>
        </div>
    </form>
</div>

<%- include('footer.ejs') %>