<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/styles.css" rel="stylesheet">
    <title><%= Player.DisplayName %></title>
</head>
<body>
    <div class="container">

        <h2>Welcome to <%= Player.DisplayName %>'s Bingo Board</h2>

        <div class="board" id="board">
            <% for (let i = 0; i < 9; i++) { %>
                <% if (Player.BoardState[i] == true ) { %>
                    <div class="square" id="<%= i %>" style="background-color: green;" onClick="eventHappened(<%= i %>)">
                        <div>
                            <h2><%= Events[Player.BoardOrder[i]] %></h2>
                        </div>
                    </div>
                <% } else { %>
                    <div class="square" id="<%= i %>" onClick="eventHappened(<%= i %>)">
                        <div>
                            <h2><%= Events[Player.BoardOrder[i]] %></h2>
                        </div>
                    </div>  
                <% } %>
            <% } %>
        </div>
    </div>

    <script src="http://<%= IP %>:3000/socket.io/socket.io.js"></script>
    <script>
        var socket = io();

        // Do this to have this socket join the room on the server side
        socket.emit('joinRoom', '<%=roomID%>');

        // Do this to have this socket  announce to room.ejs that a player joined
        socket.emit('announcePlayer', '<%=roomID%>', '<%=Player.ID%>', '<%=Player.DisplayName%>');

        function eventHappened(i) {
            document.getElementById(i).style.backgroundColor= "green";

            socket.emit('hit', '<%=Player.ID%>', i, '<%=roomID%>');
        }
    </script>
</body>
</html>

