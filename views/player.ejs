<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/styles.css" rel="stylesheet">
    <title><%= Player.DisplayName %></title>
</head>
<body>
    <div class="container">

        <h2>Welcome to <%= Player.DisplayName %>'s Bingo Board</h2>

        <div class="board" id="board">
            <% for (let i = 0; i < 9; i++) { %>
                <div class="square">
                    <div id="<%= i %>">
                        <!-- Call the function indicating which event occurred -->
                        <a onClick="eventHappened(<%= i %>)"><%= Events[Player.BoardOrder[i]] %></a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="http://<%= IP %>:3000/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        // Do this to have this socket join the room on the server side.
        socket.emit('room ID', '<%=roomID%>');

        function eventHappened(i) {
            document.getElementById(i).style.backgroundColor= "green";

            socket.emit('hit', '<%=Player.ID%>', i, '<%=roomID%>');
        }
    </script>
</body>
</html>

